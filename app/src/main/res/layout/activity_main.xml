<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
      android:id="@+id/pref_api_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="32dp"
      android:background="@color/colorAccent"
      android:clickable="true"
      android:padding="10dp"
      android:text="Get prefectures"
      android:textColor="@android:color/white"
      />

    <LinearLayout
      android:id="@+id/pref_response_layout"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/pref_api_button"
      android:layout_marginTop="32sp"
      android:weightSum="2"

      >

      <TextView
        android:id="@+id/pref_json_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="json response"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/pref_proto_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="proto response"
        android:textAlignment="center"
        />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/pref_response_layout_result"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/pref_response_layout"
      android:layout_marginTop="32sp"
      android:weightSum="2"

      >

      <TextView
        android:id="@+id/pref_json_response_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/pref_proto_response_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        />

    </LinearLayout>

    <Button
      android:id="@+id/member_api_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/pref_response_layout_result"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="32dp"
      android:background="@color/colorAccent"
      android:clickable="true"
      android:padding="10dp"
      android:text="Get members"
      android:textColor="@android:color/white"
      />

    <LinearLayout
      android:id="@+id/member_response_layout"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/member_api_button"
      android:layout_marginTop="32sp"
      android:weightSum="2"

      >

      <TextView
        android:id="@+id/member_json_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="json response"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/member_proto_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="proto response"
        android:textAlignment="center"
        />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/member_response_layout_result"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/member_response_layout"
      android:layout_marginTop="32sp"
      android:weightSum="2"

      >

      <TextView
        android:id="@+id/member_json_response_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        />

      <TextView
        android:id="@+id/member_proto_response_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        />

    </LinearLayout>


  </RelativeLayout>

</layout>